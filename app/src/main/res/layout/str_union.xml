                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="힘 증가" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
